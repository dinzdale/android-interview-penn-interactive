<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/date_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Date:"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/min_tmp_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:text="Min Temperature:"
        app:layout_constraintStart_toStartOf="@+id/date_label"
        app:layout_constraintTop_toBottomOf="@+id/date_label" />

    <TextView
        android:id="@+id/max_tmp_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Max Temperature:"
        app:layout_constraintStart_toStartOf="@+id/min_tmp_label"
        app:layout_constraintTop_toBottomOf="@+id/min_tmp_label" />

    <TextView
        android:id="@+id/wind_speed_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="@string/wind_speed"
        app:layout_constraintStart_toStartOf="@+id/max_tmp_label"
        app:layout_constraintTop_toBottomOf="@+id/max_tmp_label" />

    <TextView
        android:id="@+id/condition_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="@string/condition"
        app:layout_constraintStart_toStartOf="@+id/wind_speed_label"
        app:layout_constraintTop_toBottomOf="@+id/wind_speed_label" />

    <TextView
        android:id="@+id/date_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        app:layout_constraintStart_toEndOf="@+id/date_label"
        app:layout_constraintTop_toTopOf="@+id/date_label"
        tools:text="date goes here"/>

    <TextView
        android:id="@+id/min_tmp_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        app:layout_constraintStart_toEndOf="@+id/min_tmp_label"
        app:layout_constraintTop_toTopOf="@+id/min_tmp_label"
        tools:text="min temp goes here"/>

    <TextView
        android:id="@+id/max_tmp_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        app:layout_constraintStart_toEndOf="@+id/max_tmp_label"
        app:layout_constraintTop_toTopOf="@+id/max_tmp_label"
        tools:text="max temp goes here"/>

    <TextView
        android:id="@+id/wind_speed_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        app:layout_constraintStart_toEndOf="@+id/wind_speed_label"
        app:layout_constraintTop_toTopOf="@+id/wind_speed_label"
        tools:text="wind speed goes here"/>

    <TextView
        android:id="@+id/condition_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        app:layout_constraintStart_toEndOf="@+id/condition_label"
        app:layout_constraintTop_toTopOf="@+id/condition_label"
        tools:text="condition goes here"/>
</androidx.constraintlayout.widget.ConstraintLayout>